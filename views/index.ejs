            //---------------
            .config(['$routeProvider', function ($routeProvider) {
                $routeProvider.when('/', {
                    templateUrl: '/templates/all_products.html'
                    , controller: 'ProductController'
                })
                .when('/clothes', {
                    templateUrl: '/templates/clothes.html'
                    , controller: 'ProductController'
                })
                .when('/electronics', {
